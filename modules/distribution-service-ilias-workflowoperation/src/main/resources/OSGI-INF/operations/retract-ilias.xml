<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
               name="org.opencastproject.workflow.handler.RetractIliasWorkflowOperationHandler"
               immediate="true"
               activate="activate">
  <implementation class="org.opencastproject.workflow.handler.RetractIliasWorkflowOperationHandler"/>
  <property name="service.description" value="ILIAS Retraction Workflow Operation Handler"/>
  <property name="workflow.operation" value="retract-ilias"/>
  <service>
    <provide interface="org.opencastproject.workflow.api.WorkflowOperationHandler"/>
  </service>
  <reference cardinality="1..1" interface="org.opencastproject.distribution.api.DistributionService"
    name="IliasDistributionService" policy="static" target="(distribution.channel=ilias)" bind="setIliasDistributionService"/>
      <reference cardinality="1..1" interface="org.opencastproject.serviceregistry.api.ServiceRegistry"
    name="ServiceRegistry" policy="static" bind="setServiceRegistry"/>
</scr:component>
