<?xml version="1.0" encoding="UTF-8"?>
<persistence
  version="2.0" 
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="org.opencastproject.userdirectory" transaction-type="RESOURCE_LOCAL">
    <class>org.opencastproject.userdirectory.JpaUser</class>
    <class>org.opencastproject.userdirectory.JpaGroup</class>
    <class>org.opencastproject.userdirectory.JpaRole</class>
    <class>org.opencastproject.userdirectory.JpaUserReference</class>
    <class>org.opencastproject.kernel.security.persistence.JpaOrganization</class>
    <properties>
      <property name="eclipselink.create-ddl-jdbc-file-name" value="create-matterhorn-userdirectory.jdbc"/>
      <property name="eclipselink.drop-ddl-jdbc-file-name" value="drop-matterhorn-userdirectory.jdbc"/>
    </properties>
  </persistence-unit>
</persistence>
